// ADD EMPLOYEE MODEL
#addEmployeeModal.modal.fade
  .modal-dialog
    .modal-content
      form(name="myform"  action="/employeeadd" class="form" method ='post' autocomplete="off")
        .modal-header
          h4.modal-title 
          b ADD THE NEW EMPLOYEE
          button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
        .modal-body
          .form-group
            label First Name
            input.form-control(type='text' name='firstname'  placeholder='Enter The First Name' required )
          .form-group
            label Last Name
            input.form-control(type='text' name='lastname'  placeholder='Enter The Last Name' required )
          .form-group
               label(for='department') Department
               select.form-control(class="department" name="department")
                  option(value='') Select Your Department
                  option(value='development') development
                  option(value='management') management
                  option(value='human resource') human resource
                  option(value='bussiness') bussiness
          .form-group
            label Mobile Number
            input.form-control(type="text" name='mobilenumber' class='mobilenumber' maxlength="10" placeholder='Enter The Mobile Number' required autocomplete="off")
          .form-group
            label Current Address
            textarea.form-control(type='text'  name='address' placeholder='Enter the Current Address' required)
          .check 
            input(type="checkbox" name="billingtoo" onclick="FillBilling(this.form)")
            |    If Current Address And Permanent Address Is Same Please Tick This Box.
          .form-group
            label Permanent Address
            textarea.form-control(type='text' name='address2' placeholder='Enter the Permanent Address' required)
          .form-group
            label Email
            input.form-control(type='email' name='email' placeholder='Enter The Email' autocomplete="off"  required)
          .form-group
            label Password
            input.form-control(type='password' name='password' placeholder='Enter The Password' required)
        .modal-footer
          input.btn.btn-default(type='button' data-dismiss='modal' value='Cancel')
          //-input.btn.btn-success(type='submit' value='ADD') 
          input.btn.btn-success(type='submit' value='ADD' data-toggle='modal' data-target='#addEmployeeModal' data-backdrop='static' data-keyboard='false') 



           
// Edit Modal HTML
#editEmployeeModal.modal.fade
  .modal-dialog
    .modal-content
      form#editform(name='editform' action='/employeeupdate/:id', method='post')
        .modal-header
          h4.modal-title 
                b   Edit Employee
          button.close(type='button' data-dismiss='modal' aria-hidden='true')
        .modal-body
          .form-group
           input#id(type='hidden' name='id')
           label FIRSTNAME
           input#firstname.form-control(type='text' autocomplete="off")
          .form-group
            label  LASTNAME
            input#lastname.form-control(type='text' autocomplete="off" )
          .form-group
            label DEPARTMENT
            select#department.form-control(type='text' autocomplete="off")
               option(value='') Choose Your Department
               option(value='Development') Development
               option(value='Management') Management
               option(value='Human Resource') Human Resource
               option(value='Customer Support') Customer Support
               option(value='Bussiness') Bussiness
               option(value='Corparate Finance') Corparate Finance
          .form-group
           label  MOBILENUMBER
           input#mobilenumber.form-control(type='text' autocomplete="off")
          .form-group
           label Current Address
           input#address.form-control(type='text' autocomplete="off")
          .form-group
           label Permanent Address
           input#address2.form-control(type='text' autocomplete="off")
          .form-group
           label EMAIL
           input#email.form-control(type='email' autocomplete="off")
        .modal-footer
          input.btn.btn-default(type='button' data-dismiss='modal' value='Cancel')
          //-button#edit_submit.btn.btn-info(type='submit' data-dismiss='modal' value='submit' class="#edit_submit") UPDATE
          button#edit_submit.btn.btn-info(data-toggle='modal' data-target='#editEmployeeModal' value='submit' class="#edit_submit" data-backdrop='static' data-keyboard='false') UPDATE 

  
