// ADD EMPLOYEE MODEL
#addEmployeeModal.modal.fade
  .modal-dialog
    .modal-content
      form(name="myform" action="/payrollcreate"   method ='post' autocomplete="off")
        .modal-header
          h4.modal-title 
          b ADD Payroll
          button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
        .modal-body
          .form-group
               label(for='department') Department
               select.form-control(id="department" name="department")
                  option(value='') Select Your Department
                  option(value='development') development
                  option(value='management') management
                  option(value='human resource') human resource
                  option(value='bussiness') bussiness
         
          .form-group
              label(for='role') Role
              select.form-control( id="role" name="role")
                option(value='')  Select Your Role 
          .form-group
              label(for='role') day
              input(type="radio" value="day" name="date" id="day") 
              label(for='role') month
              input(type="radio" value="month" name="date" id="month" required) 
              label(for='role') year
              input(type="radio" value="year" name="date" id="year" required) 
              
          .form-group
              label(for='month')
              select.form-control#monthrow(name='month')
                option(value='') Select The Month 
                option(value='31') January
                option(value='28') February
                option(value='31') March
                option(value='30') April
                option(value='31') May
                option(value='30') June
                option(value='31') July
                option(value='31') August
                option(value='30') September
                option(value='31') October
                option(value='30') November
                option(value='31') December

          .form-group
            label(for='time') No.Of.Time-Period
            input.form-control(type="number" name="timeperiod" class="time" )
          .form-group
            label(for='amount') Amount
            input.form-control(type="number" name="amount" class="amount")
          .form-group
            label(for='total amount') Total Amount
            input.form-control(type="number" name="totalamount" class="totalamount" readonly )
        .modal-footer
          input.btn.btn-default(type="button" class="close" data-toogle="modal" aria-hidden="true" value="reset") 
          //- input.btn.btn-success(type='submit' value='ADD') 
          input.btn.btn-success(type='submit' value='ADD' data-toggle='modal' data-target='#addEmployeeModal' data-backdrop='static' data-keyboard='false') 
          


